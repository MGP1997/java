package test1;

import java.util.Scanner;

/*
 * 날짜 : 2025/07/09
 * 이름 : 박민규
 * 내용 : 자바 기본 입출력 연습문제
 */
public class test2 {
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int year;
		int birth;
		String name;
		
		System.out.print("올해 년도 입력 : ");
		year = 2025;
		System.out.print("태어난 년도 입력 : ");
		birth = 1997;
		System.out.println("이름 입력 : ");
		name = 박민규;
				
		int age = year - birth;
		
		System.out.("%s님 안녕하세요. \n당신은 올해 만 %d입니다.", name, age);
		
		sc.close();
		
		
	}

}
