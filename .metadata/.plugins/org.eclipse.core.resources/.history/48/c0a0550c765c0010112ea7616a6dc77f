package p92;

public class dsa {
	public static final int YEAR = 365;
	public static final int MONTH = 30;
	public static final int WEEK = 7;
	
	public static void main(String[] args) {
		System.out.println("1년은" + YEAR + "일입니다.");
		System.out.println("한 달은" + MONTH + "일로 계산합니다.");
		System.out.println("일주일은" + WEEK + "일입니다.");
	
		
		System.out.println(8 >> 2);
		System.out.println(-16 >> 2);
		
		int opr = 4;
		System.out.println(opr++);
		
		int x = 2 , y = 10, z = 0;
		System.out.println(z = x++*2+--y-5+x*(y%2));
		
		int a = 1;
		if (a == 0) { 
			System.out.println("0입니다.");
			
		int option = 1 ; 
		switch (option) { 
			case 1:
				System.out.println("옵션 1");
			case 2 :
				System.out.println("옵션 2");
			case 3 :
				System.out.println("옵션 3");
			case 4 :
				System.out.println("옵션 4");
		}
		}
		
	}	


}
